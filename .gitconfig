[user]
        name = Simon Hauser
        email = Simon.Hauser.XD@live.de
[core]
        editor = nvim
[alias]
        aa = add --all
        bv = branch -vv
        ba = branch -ra
        bd = branch -d
        ca = commit --amend
        cb = checkout -b
        st = status --short --branch
        ci = commit -v
        co = checkout
        di = diff
        mm = merge --no-ff
        br = branch
        unstage = reset HEAD --
        last = log -1 HEAD
        uncommit = reset --soft HEAD~1

        graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

        # External commands
        af = "!files=$(fgst -a); [ \"$files\" = \"\" ] && exit; git add $files && echo \"Files added:\" && echo \"$files\""
        cf = "!files=$(fgst -c); [ \"$files\" = \"\" ] && exit; git checkout -- $files >/dev/null && echo \"Files checkouted:\" && echo \"$files\""
        uf = "!files=$(fgst -u); [ \"$files\" = \"\" ] && exit; git reset HEAD -- $files >/dev/null && echo \"Files reseted:\" && echo \"$files\""

[color]
        diff = auto
        status = auto
        branch = auto
