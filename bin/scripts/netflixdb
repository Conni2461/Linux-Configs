#!/bin/bash

function addMovie()
{
        echo "${1} - Movie"
}

function addShow()
{
        echo "${1} - Show"
}

CountMovie=$(sed -e '/-----/,$d' ~/docs/shared/netflix | awk NF | cut -d- -f2 | grep Movie | wc -l)
CountShow=$(sed -e '/-----/,$d' ~/docs/shared/netflix | awk NF | cut -d- -f2 | grep Show | wc -l)

echo "Movies to watch:          ${CountMovie}"
echo "Shows to watch:                   ${CountShow}"
echo "Upcoming:"
sed -e '1,/-----/d' ~/docs/shared/netflix | awk NF
