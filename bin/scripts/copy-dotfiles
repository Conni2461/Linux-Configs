#!/bin/bash

BASEDIR=$(pwd)

function createDir()
{
	if [ ! -d $1 ]; then
		mkdir $1
	fi
}


cp ~/.bashrc $BASEDIR
cp ~/.gitconfig $BASEDIR
cp ~/.tmux.conf $BASEDIR
cp ~/.vimrc $BASEDIR
cp ~/.xinitrc $BASEDIR
cp ~/.zprofile $BASEDIR
cp ~/.zshrc $BASEDIR
cp ~/.st.config.h $BASEDIR
cp ~/.dmenu.config.h $BASEDIR
cp ~/.surf.config.h $BASEDIR

createDir $BASEDIR/.config
createDir $BASEDIR/.config/i3
createDir $BASEDIR/.config/newsboat

cp ~/.config/i3/config $BASEDIR/.config/i3
cp -R ~/.config/polybar/ $BASEDIR/.config/
cp ~/.config/rofi $BASEDIR/.config/
cp ~/.config/newsboat/urls $BASEDIR/.config/newsboat/
cp ~/.config/newsboat/config $BASEDIR/.config/newsboat/

createDir $BASEDIR/bin
createDir $BASEDIR/bin/scripts
createDir $BASEDIR/bin/external

cp -R ~/bin/scripts/ $BASEDIR/bin/
cp -R ~/bin/external/st/ $BASEDIR/bin/external/
rm -rf $BASEDIR/bin/external/st/.git
rm -rf $BASEDIR/bin/external/st/st
rm -rf $BASEDIR/bin/external/st/st.o
rm -rf $BASEDIR/bin/external/st/x.o
