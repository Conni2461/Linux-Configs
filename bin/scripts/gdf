#!/bin/sh

hash="############################################################"
dash="------------------------------------------------------------"

df "$@" | tr -s ' ' '\t' | cut -f5,6 | while read pct fs; do
	printf "%-16s %4s " $fs $pct
	if [ "$pct" != "Use%" ]; then
		usedc=$((${#hash}*${pct%\%}/100))
		echo "${hash:0:$usedc}${dash:$usedc}"
	else
		echo ""
	fi
done
