#!/usr/bin/env bash

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -u $UID -x polybar >/dev/null; do sleep 1; done

# Launch bar
polybar --config=/home/conni/.config/polybar/config top &

display=$(xrandr | grep '\<connected\>' | wc -l)
if [ "$display" == "2" ]; then

	xrandr | grep '\<DP1 conntected\>' && polybar --config=/home/conni/.config/polybar/config top2 &
	xrandr | grep '\<HDMI1 conntected\>' && polybar --config=/home/conni/.config/polybar/config top3 &
fi
