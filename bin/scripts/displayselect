#!/bin/bash

#Lists
first="single\nduplicate\nextend\nManual selection"
screens="laptop\nHDMI\nDP"
adapter="HDMI\nDP"

# Functions
function selectScreen()
{
	chosenS=$(echo -e "$screens" | dmenu -i)
	case "$chosenS" in
		laptop ) xrandr --output eDP1 --auto --output HDMI1 --off --output DP1 --off ;;
		HDMI ) xrandr --output eDP1 --off --output HDMI1 --auto --output DP1 --off ;;
		DP ) xrandr --output eDP1 --off --output HDMI1 --off --output DP1 --auto ;;
	esac

	return 0
}

function selectAdapterD()
{
	chosenD=$(echo -e "$adapter" | dmenu -i)
	case "$chosenD" in
		HDMI ) xrandr --output eDP1 --auto --output HDMI1 --auto --output DP1 --off ;;
		DP ) xrandr --output eDP1 --auto --output HDMI1 --off --output DP1 --auto ;;
	esac

	return 0
}

function selectAdapterE()
{
	chosenE=$(echo -e "$adapter" | dmenu -i)
	case "$chosenE" in
		HDMI ) xrandr --output eDP1 --auto --output HDMI1 --auto --right-of eDP1 --output DP1 --off ;;
		DP ) xrandr --output eDP1 --auto --output HDMI1 --off --output DP1 --auto --right-of eDP1 ;;
	esac

	return 0
}

# Main
chosenM=$(echo -e "$first" | dmenu -i)

case "$chosenM" in
	single ) selectScreen && polybar_launch ;;
	duplicate ) selectAdapterD && polybar_launch ;;
	extend ) selectAdapterE && polybar_launch ;;
	"Manual selection" ) arandr && polybar_launch ;;
esac
