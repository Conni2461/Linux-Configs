#!/bin/bash

choices="laptop\nlaptopdual\nHDMI\nboth\nManual selection"

chosen=$(echo -e "$choices" | dmenu -i)

case "$chosen" in
	laptop ) xrandr --output eDP1 --auto --output HDMI1 --off && polybar_launch ;;
	laptopdual ) xrandr --output eDP1 --auto --output HDMI1 --auto --right-of eDP1 && polybar_launch ;;
	HDMI ) xrandr --output DP1 --off --output HDMI1 --auto && polybar_launch ;;
	both ) xrandr --output DP1 --auto --output HDMI1 --auto && polybar_launch ;;
	"Manual selection" ) arandr && polybar_launch ;;
esac
