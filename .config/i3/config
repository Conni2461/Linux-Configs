set $default_gaps_inner 5
set $default_gaps_outer 0
gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

set $mod Mod4
set $shutdown shutdown -h now
set $reboot reboot
set $hibernate systemctl suspend

new_window none

font pango:mono 13

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Autostart programs
exec --no-startup-id dunst
exec --no-startup-id nitrogen --restore; sleep 1; compton -b
exec --no-startup-id xautolock -time 10 -locker 'i3lock-fancy' -notify 30 -notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 30 seconds'"
exec --no-startup-id /home/conni/bin/i3cmds/startup

exec_always --no-startup-id /home/conni/bin/croncmds/getforecast kornwestheim
exec_always --no-startup-id /home/conni/bin/croncmds/syncshared
exec_always --no-startup-id /home/conni/bin/croncmds/newsup
exec_always --no-startup-id /usr/local/bin/mailsync

# Alsa controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle && pkill -RTMIN+10 i3block

# Programms
bindsym $mod+Return exec st                                                                             # Default shell
bindsym $mod+z exec st nnn                                                                              # Default File Manager
bindsym $mod+g [instance="math"] scratchpad show; [instance="math"] move position center
bindsym $mod+i exec st nvim                                                                             # Default Text Editor
bindsym $mod+c exec firefox                                                                             # Default Browser
bindsym $mod+n exec st newsboat                                                                         # RSS Feed Reader
bindsym $mod+m exec st neomutt                                                                          # Mail programm
bindsym $mod+p exec st weechat                                                                          # Chat programm mainly used for slack
bindsym $mod+t exec surf trello.com                                                                     # Open trello
bindsym $mod+Shift+m exec st alsamixer

# Shortcuts
bindsym $mod+Shift+q [con_id="__focused__" instance="^(?!math).*$"] kill
bindsym $mod+d exec --no-startup-id dmenu_run -i                                                                                # Dmenu run case insensetive
bindsym $mod+u exec --no-startup-id /home/conni/bin/i3cmds/cabl                                                                 # Script to handle mouse selection
bindsym $mod+Shift+y exec --no-startup-id i3lock-fancy                                                                          # Lock screen
bindsym $mod+Shift+x exec --no-startup-id /home/conni/bin/i3cmds/rdq "Are you sure you want to shutdown?" "$shutdown"           # Shutdown
bindsym $mod+Shift+Escape exec --no-startup-id /home/conni/bin/i3cmds/rdq "Are you sure you want to reboot?" "$reboot"          # Reboot
bindsym $mod+F3 exec --no-startup-id /home/conni/bin/i3cmds/displayselect                                                       # Display select
bindsym $mod+F4 exec --no-startup-id /home/conni/bin/i3cmds/rdq "Are you sure you want to hibernate computer?" "$hibernate"     # Hibernate
bindsym $mod+F5 exec --no-startup-id /home/conni/bin/i3cmds/restart-nmcli                                                       # Restart network
bindsym $mod+grave exec --no-startup-id /home/conni/bin/i3cmds/dmenuunicode                                                     # Emoji selection
bindsym $mod+F9 exec --no-startup-id /home/conni/bin/i3cmds/dmenumount                                                          # Dmenu mount
bindsym $mod+F10 exec --no-startup-id /home/conni/bin/i3cmds/dmenuumount                                                        # Dmenu umount

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

