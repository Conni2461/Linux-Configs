#!/bin/bash

# Use neovim for vim if present
command -v nvim >/dev/null && vim() { if jobs | grep -q nvim; then fg; else command nvim $*; fi } && alias vimdiff="nvim -d"
command -v neomutt >/dev/null && alias mutt='neomutt && pkill -RTMIN+12 i3blocks'
alias slack="weechat"

# ls and other file stuff
alias ls='ls -hN --color=auto --group-directories-first'
alias l='exa -bghl -sname --icons --git'
alias ll='exa -bghla -sname --icons --git'
alias tree='exa -sname --tree --icons'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias mkd='mkdir -pv'

# System
alias p='sudo pacman'
yay() { if [ "$1" == "" ] || [ "${1:0:1}" == "-" ]; then command yay $1; else command yay --editmenu $1; fi }
alias SS='sudo systemctl'
alias startx='startx ~/.xinitrc'

# Other
alias type='type -a'
alias wiki='nvim -c "VimwikiIndex"'
alias ka='killall'
alias df='df -kHT'
alias del='trash'
alias f='nnn'
alias g='git'
alias e='vim'
alias v='vim'
alias z='zathura'
alias x='sxiv -ft *'
alias sdn='sudo shutdown -h now'
alias ccat='highlight --out-format=ansi --force'
alias lsp='pacman -Qett --color=always | less'
alias ffmpeg='ffmpeg -hide_banner'
alias scim="sc-im"
alias ru="sudo docker run -ti --rm ubuntu:latest bash"
alias newsboat='newsboat && pkill -RTMIN+6 i3blocks'
alias :q='echo you are not in vim'
alias :wq='echo you are not in vim'
alias R='R --no-save'
alias trans='trans en:de'

# Shortcuts
## Files
alias eA='vim ~/.aliasrc'
alias eF='vim ~/.functionrc'
alias eB='vim ~/.bashrc'
alias eP='vim ~/.profile'
alias eG='vim ~/.gitconfig'
alias eI='vim ~/.config/i3/config'
alias eM='vim ~/.config/mutt/muttrc'
alias eN='vim ~/.config/newsboat/config'
alias eU='vim ~/.config/newsboat/urls'
alias eV='vim ~/.config/nvim/init.vim'

## Directories
alias ..='cd ..'
alias h='cd ~/'
alias d='cd ~/docs'
alias D='cd ~/Downloads'
alias sc='cd ~/bin/scripts'
alias cf='cd ~/.config'
alias mn='cd /mnt'
